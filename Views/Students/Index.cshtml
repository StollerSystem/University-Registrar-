@{
  Layout = "_Layout";
}

@using University.Models;

<h1>Students</h1>
@if (@Model.Count == 0)
{
  <h3>No Students have been added yet</h3>
}
@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.StudentName}", "Details", new { id = student.StudentId}) || Enrolled : @student.DateofEnroll || Dept. @student.Department.DepartmentName </li>
}
<button>@Html.ActionLink("Add new student", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>