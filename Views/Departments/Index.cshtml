@{
  Layout = "_Layout";
}

@using University.Models;

<h1>Departments</h1>
@if (@Model.Count == 0)
{
  <h3>No Departments have been added yet</h3>
}
@foreach (Department department in Model)
{
  <li>@Html.ActionLink($"{department.DepartmentName}", "Details", new { id = department.DepartmentId})</li>
}
<button>@Html.ActionLink("Add new department", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>